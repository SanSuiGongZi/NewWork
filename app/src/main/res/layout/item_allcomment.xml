<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/mImg"
        android:layout_width="@dimen/dp_38"
        android:layout_height="@dimen/dp_38"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_20"
        android:src="@mipmap/ee" />
    <TextView
        android:textColor="@color/c_373737"
        android:textSize="@dimen/sp_14"
        android:id="@+id/mTv_name"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_toRightOf="@id/mImg"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mTv_day"
        android:textColor="@color/c_999"
        android:textSize="@dimen/dp_10"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mTv_str"
        android:layout_below="@id/mImg"
        android:layout_margin="@dimen/dp_20"
        android:textColor="@color/c_636363"
        android:textSize="@dimen/sp_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>