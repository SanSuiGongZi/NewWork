<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_eeeeee"
    tools:context=".ui.fragment.Fragment_Code">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/img_start"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_35"
        android:src="@mipmap/back_white"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25" />
    
    <TextView
        android:layout_alignParentRight="true"
        android:text="@string/send_again"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/c_999"
        android:layout_marginTop="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20" />
    
    <TextView
        android:id="@+id/etv"
        android:layout_marginTop="@dimen/dp_44"
        android:layout_marginLeft="@dimen/dp_23"
        android:text="@string/input_code"
        android:textSize="@dimen/sp_27"
        android:textColor="@color/c_373737"
        android:layout_below="@id/img_start"
        android:layout_width="@dimen/dp_170"
        android:layout_height="@dimen/dp_38" />


    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_below="@id/etv"
        android:layout_marginTop="@dimen/dp_83"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">

        <EditText
            android:id="@+id/edit_first"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:inputType="number"
            android:textSize="40sp"
            android:maxLength="1"
            android:textCursorDrawable="@null"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:background="@drawable/selector_code_edit"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/edit_second"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:inputType="number"
            android:textSize="40sp"
            android:maxLength="1"
            android:textColor="@color/colorAccent"
            android:textCursorDrawable="@null"
            android:textAlignment="center"
            android:background="@drawable/selector_code_edit"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/edit_third"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:inputType="number"
            android:textSize="40sp"
            android:maxLength="1"
            android:textColor="@color/colorAccent"
            android:textCursorDrawable="@null"
            android:textAlignment="center"
            android:background="@drawable/selector_code_edit"
            android:layout_margin="5dp"/>
        <EditText
            android:id="@+id/edit_fourth"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:inputType="number"
            android:textSize="40sp"
            android:maxLength="1"
            android:textColor="@color/colorAccent"
            android:textCursorDrawable="@null"
            android:textAlignment="center"
            android:background="@drawable/selector_code_edit"
            android:layout_margin="5dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ll_code"
        android:layout_alignBottom="@+id/ll_code"
        android:background="@android:color/transparent"
        android:textColor="@android:color/transparent"
        android:cursorVisible="false"
        android:inputType="number"/>

</RelativeLayout>