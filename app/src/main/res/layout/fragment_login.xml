<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_eeeeee"
    tools:context=".ui.fragment.Fragment_login">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_73"
        android:text="@string/hello_server"
        android:textColor="@color/c_FA6A13"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_isLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hello"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_9"
        android:text="@string/login_Bangmi"
        android:textColor="@color/c_373737"
        android:textSize="@dimen/sp_27" />


    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_below="@id/tv_isLogin"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_106"
        android:layout_marginRight="@dimen/dp_23"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/phone" />

        <TextView
            android:id="@+id/tv_86"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86" />

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/select" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/login_phone" />

        <Button
            android:id="@+id/btn_Verification"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/shape_no"
            android:text="@string/send_code"
            android:textColor="@color/c_FEFEFE"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/ll_phone"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_23"
        android:background="@color/c_FA6A13" />

    <LinearLayout
        android:id="@+id/ll_or"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:layout_below="@id/ll_phone"
        android:layout_marginTop="@dimen/dp_181"
        android:gravity="center">

        <TextView
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:text="－"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:text="or"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="@dimen/dp_15"
            android:layout_height="wrap_content"
            android:text="－"
            android:textSize="@dimen/sp_10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_or"
        android:layout_marginTop="@dimen/dp_7"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_80"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgQQ"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:background="@color/c_eeeeee"
                android:src="@mipmap/ssdk_oks_classic_qq" />

            <TextView
                android:layout_width="@dimen/dp_51"
                android:layout_height="@dimen/dp_17"
                android:gravity="center"
                android:text="@string/login_qq"
                android:textColor="@color/c_4DAE46"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgWeChat"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:background="@color/c_eeeeee"
                android:src="@mipmap/buy_weixin" />

            <TextView
                android:layout_width="@dimen/dp_51"
                android:layout_height="@dimen/dp_17"
                android:gravity="center"
                android:text="@string/login_wechar"
                android:textColor="@color/c_4DAE46"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_80"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imgWB"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:background="@color/c_eeeeee"
                android:src="@mipmap/ssdk_oks_classic_sinaweibo" />

            <TextView
                android:layout_width="@dimen/dp_51"
                android:layout_height="@dimen/dp_17"
                android:gravity="center"
                android:text="@string/login_webo"
                android:textColor="@color/c_4DAE46"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_agreement"
        android:layout_width="@dimen/dp_209"
        android:layout_height="@dimen/dp_18"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp_5"
        android:gravity="center"
        android:text="@string/login_okbangmi"
        android:textSize="@dimen/sp_13" />

</RelativeLayout>