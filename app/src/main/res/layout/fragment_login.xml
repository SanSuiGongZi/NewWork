<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.Fragment_login">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_73"
        android:text="你好,为了获取跟好的服务"
        android:textColor="@color/c_FA6A13"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_isLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hello"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_9"
        android:text="请登录伴米旅行"
        android:textColor="@color/c_373737"
        android:textSize="@dimen/sp_27" />

    <RelativeLayout
        android:id="@+id/mrl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_below="@id/tv_isLogin"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_106"
        android:layout_marginRight="@dimen/dp_23">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8">

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/phone" />

            <TextView
                android:id="@+id/tv_86"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_toRightOf="@id/iv_phone"
                android:text="+86" />

            <ImageView
                android:id="@+id/iv_select"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_toRightOf="@id/tv_86"
                android:src="@mipmap/select" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_toRightOf="@id/iv_select"
                android:background="@null"
                android:hint="请输入手机号" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_Verification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:enabled="false"
            android:background="@mipmap/button_unavailable"
            android:text="发送验证码"
            android:textColor="@color/c_FEFEFE"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="@dimen/dp_329"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:background="@color/c_FA6A13" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@id/mrl"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_182"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:gravity="center">

            <TextView
                android:layout_width="@dimen/dp_15"
                android:layout_height="wrap_content"
                android:text="－"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:layout_width="@dimen/dp_15"
                android:layout_height="wrap_content"
                android:text="or"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="@dimen/dp_15"
                android:layout_height="wrap_content"
                android:text="－"
                android:textSize="@dimen/sp_10" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_80">

                <ImageButton
                    android:id="@+id/imgQQ"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:background="@drawable/redioqq"
                    android:src="@mipmap/ss" />

                <TextView
                    android:layout_width="@dimen/dp_51"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_9"
                    android:gravity="center"
                    android:text="QQ登录"
                    android:textColor="@color/c_4DAE46"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_80">

                <ImageView
                    android:id="@+id/imgWeChat"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:src="@mipmap/wechat" />

                <TextView
                    android:layout_width="@dimen/dp_51"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_9"
                    android:gravity="center"
                    android:text="微信登录"
                    android:textColor="@color/c_4DAE46"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_80">

                <ImageButton
                    android:id="@+id/imgWB"
                    android:src="@mipmap/wbs"
                    android:background="@drawable/rediowb"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50" />

                <TextView
                    android:layout_width="@dimen/dp_51"
                    android:layout_height="@dimen/dp_17"
                    android:layout_marginTop="@dimen/dp_9"
                    android:gravity="center"
                    android:text="微博登录"
                    android:textColor="@color/c_4DAE46"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_209"
        android:layout_height="@dimen/dp_18"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="登录或注册即同意伴米旅行"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:layout_width="@dimen/dp_52"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_deal"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_16"
                android:text="用户协议"
                android:textColor="@color/c_FA6A13" />

            <View
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_1"
                android:background="@color/c_FA6A13" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>