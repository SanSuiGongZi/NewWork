<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_3"
        app:cardElevation="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_450">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_450"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_116"
                android:background="@color/c_60"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_15">

                    <TextView
                        android:id="@+id/mTv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_37"
                        android:maxEms="5"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/send_again"
                        android:textColor="@color/c_373737"
                        android:textSize="@dimen/sp_26" />


                    <Button
                        android:id="@+id/mBtn_price"
                        android:layout_width="@dimen/dp_74"
                        android:layout_height="@dimen/dp_29"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/shape_ok"
                        android:text="@string/wait_please"
                        android:textColor="@color/c_ffffff"
                        android:textSize="@dimen/sp_15" />

                </RelativeLayout>

                <TextView
                    android:layout_below="@id/rl"
                    android:id="@+id/mTv_quantity"
                    android:layout_width="@dimen/dp_74"
                    android:gravity="center"
                    android:layout_height="@dimen/dp_17"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="@string/agentweb_click_open"
                    android:textColor="@color/c_636363"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:id="@+id/lls"
                    android:layout_below="@id/rl"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_25">

                    <ImageView
                        android:id="@+id/ic"
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_12"
                        android:src="@mipmap/icon_en" />

                    <TextView
                        android:id="@+id/mTv_area"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="@string/send_again"
                        android:textColor="@color/c_999"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>
                    <TextView
                        android:layout_below="@id/lls"
                        android:id="@+id/mTv_str"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_25"
                        android:maxLines="1"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="@string/agentweb_click_open"
                        android:textColor="@color/c_636363"
                        android:textSize="@dimen/sp_18" />
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>